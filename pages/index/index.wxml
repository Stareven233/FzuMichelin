<!--index.wxml-->
<view class="container">
  <searchBox></searchBox>

  <view class="taste_wrap">
    <view class="taste_title">口味选择</view>
    <view class="taste_buttons">
      <button 
      plain
      class="taste"
      wx:for="{{tastes}}"
      wx:key="taste"
      >
      {{item.taste}}
      </button>
    </view>
  </view>

  <view class="recommend_wrap">
    <view class="recommend_title">今日推荐</view>
    <view wx:if="{{!logined}}">
      请先登录
      <!-- 之后可以做成按钮，跳转到个人中心去登录 -->
    </view>
    <view wx:else class="recommend_lists">
    </view>
  </view>
</view>
