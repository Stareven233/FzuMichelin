/* pages/dish_detail/index.wxss */
.dish_wrap {
  display: flex;
  justify-content: space-around;
  margin: 30rpx 40rpx;
}
.dish_wrap .dish_img_wrap {
  flex: 3;
  overflow: hidden;
}
.dish_wrap .dish_img_wrap .dish_img {
  background-color: #55897e;
  height: 240rpx;
  width: 240rpx;
  border-radius: 6%;
}
.dish_wrap view.dish_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.dish_wrap view.dish_info .dish_name {
  font-size: 32rpx;
  font-weight: 700;
}
.dish_wrap view.dish_info view.dish_price_row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  font-size: 30rpx;
}
.dish_wrap view.dish_info view.dish_price_row .dish_score {
  display: flex;
  justify-content: space-between;
}
.dish_wrap view.dish_info view.dish_price_row .dish_score .dish_stars {
  color: #eef90e;
  margin-right: 10rpx;
}
.dish_wrap view.dish_info view.dish_loc {
  font-size: 26rpx;
  color: #555555;
}
.dish_wrap view.dish_info view.dish_loc text:first-child {
  margin-right: 30rpx;
}
.dish_wrap view.dish_info view.dish_taste_wrap {
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: start;
}
.dish_wrap view.dish_info view.dish_taste_wrap view.dish_taste {
  font-size: 26rpx;
  padding: 6rpx 14rpx;
  margin-right: 8rpx;
  background-color: #a7f08a;
  border-radius: 30%;
}
view.comment_wrap {
  margin: 30rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
view.comment_wrap text.comment_header {
  font-size: 34rpx;
  font-weight: 700;
}
view.comment_wrap view.comment_box {
  margin: 10rpx 30rpx 30rpx;
}
view.comment_wrap view.comment_box view.comment_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
view.comment_wrap view.comment_box view.comment_info view.comment_user_info .user_avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
view.comment_wrap view.comment_box view.comment_info view.comment_user_info text {
  color: #ee6d18;
}
view.comment_wrap view.comment_box view.comment_info view.comment_score {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
}
view.comment_wrap view.comment_box view.comment_info view.comment_score view.dish_stars {
  margin-left: 15rpx;
}
view.comment_wrap view.comment_box view.comment_info view.comment_score view.dish_stars text.iconfont.icon-xingxing {
  color: #eef90e;
  margin-right: 5rpx;
}
view.comment_wrap view.comment_box view.comment_content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
view.comment_wrap view.comment_box view.comment_content view.comment_text {
  margin: 20rpx 0;
  font-size: 30rpx;
}
view.comment_wrap view.comment_box view.comment_content view.comment_info2 {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #555555;
  font-weight: 500;
  margin-top: 20rpx;
}
view.comment_wrap view.comment_box view.comment_content .comment_pic_wrap {
  overflow: hidden;
}
view.comment_wrap view.comment_box view.comment_content .comment_pic_wrap .comment_pic {
  max-height: 300rpx;
}
